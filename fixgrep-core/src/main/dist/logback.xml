<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${log.dir}/fixgrep.log</file>
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} %level [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <root level="WARN">
        <appender-ref ref="FILE" />
    </root>
</configuration>